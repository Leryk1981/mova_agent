{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.mova_agent_plan_v1.schema.json",
  "title": "env.mova_agent_plan_v1",
  "description": "Carries ordered steps (v0 sequential), references tool pool and instruction profile",
  "type": "object",
  "required": [
    "verb",
    "subject_ref",
    "object_ref",
    "payload"
  ],
  "properties": {
    "verb": {
      "type": "string",
      "enum": ["propose", "publish", "execute"]
    },
    "subject_ref": {
      "type": "string",
      "description": "Reference to the planning entity"
    },
    "object_ref": {
      "type": "string",
      "description": "Reference to the target object"
    },
    "payload": {
      "type": "object",
      "required": ["steps"],
      "properties": {
        "steps": {
          "type": "array",
          "items": {
            "$ref": "ds.mova_agent_step_v1.schema.json"
          }
        },
        "tool_pool_ref": {
          "type": "string",
          "description": "Reference to the allowed tool pool"
        },
        "instruction_profile_ref": {
          "type": "string",
          "description": "Reference to the instruction profile"
        },
        "model_instruction": {
          "type": "object",
          "description": "Text channel for planner prompts (should not be executed)"
        }
      }
    }
  }
}