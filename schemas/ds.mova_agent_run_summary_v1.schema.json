{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/ds.mova_agent_run_summary_v1.schema.json",
  "title": "ds.mova_agent_run_summary_v1",
  "description": "Summary of a MOVA agent run execution",
  "type": "object",
  "required": ["run_id", "request_id", "status", "timestamp_start", "timestamp_end", "steps_executed"],
  "properties": {
    "run_id": {
      "type": "string",
      "description": "Unique identifier for this run"
    },
    "request_id": {
      "type": "string",
      "description": "Identifier of the original request"
    },
    "status": {
      "type": "string",
      "enum": ["success", "failure", "partial_success", "cancelled", "timeout"],
      "description": "Overall execution status"
    },
    "timestamp_start": {
      "type": "string",
      "format": "date-time",
      "description": "Start time of the run"
    },
    "timestamp_end": {
      "type": "string",
      "format": "date-time",
      "description": "End time of the run"
    },
    "steps_executed": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of steps executed"
    },
    "steps_successful": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of successful steps"
    },
    "steps_failed": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of failed steps"
    },
    "total_duration_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Total duration in milliseconds"
    },
    "error_summary": {
      "type": "string",
      "description": "Brief summary of any errors that occurred"
    },
    "token_budget": {
      "type": "object",
      "description": "Token budget contract applied to this run",
      "properties": {
        "contract_version": {
          "type": "string",
          "description": "Version of the token budget contract"
        },
        "policy": {
          "type": "string",
          "enum": ["fail", "warn", "truncate_and_continue"],
          "description": "Policy for handling budget exceedances"
        },
        "limits": {
          "type": "object",
          "description": "Token and resource limits",
          "properties": {
            "max_model_calls": { "type": "integer", "minimum": 1 },
            "max_input_tokens": { "type": "integer", "minimum": 1 },
            "max_output_tokens": { "type": "integer", "minimum": 1 },
            "max_total_tokens": { "type": "integer", "minimum": 1 },
            "max_output_tokens_per_call": { "type": "integer", "minimum": 1 },
            "max_total_cost_usd": { "type": "number", "minimum": 0 },
            "max_tool_calls": { "type": "integer", "minimum": 1 },
            "max_tool_output_bytes_total": { "type": "integer", "minimum": 1 },
            "max_stdout_bytes": { "type": "integer", "minimum": 1 },
            "max_stderr_bytes": { "type": "integer", "minimum": 1 }
          }
        }
      }
    },
    "token_usage": {
      "type": "object",
      "description": "Token usage summary for this run",
      "properties": {
        "total_input_tokens": { "type": "integer", "minimum": 0 },
        "total_output_tokens": { "type": "integer", "minimum": 0 },
        "total_tokens": { "type": "integer", "minimum": 0 },
        "total_cost_usd": { "type": "number", "minimum": 0 },
        "call_count": { "type": "integer", "minimum": 0 },
        "usage_available": { "type": "boolean" },
        "per_call_summary": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "input_tokens": { "type": "integer", "minimum": 0 },
              "output_tokens": { "type": "integer", "minimum": 0 },
              "total_tokens": { "type": "integer", "minimum": 0 },
              "cost_usd": { "type": "number", "minimum": 0 },
              "provider": { "type": "string" },
              "model": { "type": "string" },
              "timestamp": { "type": "string", "format": "date-time" },
              "note": { "type": "string" }
            }
          }
        }
      }
    },
    "budget_status": {
      "type": "string",
      "enum": ["passed", "warned", "failed"],
      "description": "Overall budget compliance status"
    },
    "budget_violations": {
      "type": "array",
      "description": "List of budget violations",
      "items": {
        "type": "object",
        "properties": {
          "type": { "type": "string" },
          "limit": { "type": ["number", "string"] },
          "actual": { "type": ["number", "string"] },
          "message": { "type": "string" }
        }
      }
    }
  }
}