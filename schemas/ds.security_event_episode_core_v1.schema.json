{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/ds.security_event_episode_core_v1.schema.json",
  "title": "ds.security_event_episode_core_v1",
  "description": "Local security episode schema that covers the MOVA base episode plus security metadata.",
  "type": "object",
  "properties": {
    "episode_id": {
      "type": "string",
      "description": "Unique identifier of this episode."
    },
    "episode_type": {
      "type": "string",
      "description": "Logical type of the episode, e.g. a security event subtype.",
      "pattern": "^security_event(/.+)?$"
    },
    "mova_version": {
      "type": "string",
      "description": "MOVA language version used when recording this episode."
    },
    "recorded_at": {
      "type": "string",
      "format": "date-time",
      "description": "Timestamp when the episode record was created."
    },
    "started_at": {
      "type": "string",
      "format": "date-time",
      "description": "Optional execution start timestamp."
    },
    "finished_at": {
      "type": "string",
      "format": "date-time",
      "description": "Optional execution end timestamp."
    },
    "input_envelopes": {
      "type": "array",
      "description": "References to envelopes that served as inputs.",
      "items": {
        "type": "object",
        "properties": {
          "envelope_type": {
            "type": "string"
          },
          "envelope_id": {
            "type": "string"
          }
        },
        "required": [
          "envelope_type"
        ],
        "additionalProperties": true
      }
    },
    "input_data_refs": {
      "type": "array",
      "description": "References to data records that form the context.",
      "items": {
        "type": "object",
        "properties": {
          "data_type": {
            "type": "string"
          },
          "data_id": {
            "type": "string"
          }
        },
        "required": [
          "data_type"
        ],
        "additionalProperties": true
      }
    },
    "executor": {
      "type": "object",
      "description": "Description of the executor.",
      "properties": {
        "role": {
          "type": "string"
        },
        "executor_id": {
          "type": "string"
        },
        "executor_kind": {
          "type": "string"
        },
        "environment": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": [
        "executor_id"
      ],
      "additionalProperties": false
    },
    "result_status": {
      "type": "string",
      "enum": [
        "pending",
        "in_progress",
        "completed",
        "failed",
        "partial",
        "cancelled",
        "skipped"
      ]
    },
    "result_summary": {
      "type": "string"
    },
    "result_details": {
      "type": "object",
      "additionalProperties": true
    },
    "output_data_refs": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "data_type": {
            "type": "string"
          },
          "data_id": {
            "type": "string"
          }
        },
        "required": [
          "data_type"
        ],
        "additionalProperties": true
      }
    },
    "meta_episode": {
      "type": "object",
      "description": "Optional metadata for the episode.",
      "additionalProperties": true
    },
    "security_event_type": {
      "type": "string",
      "description": "Concrete type of security event.",
      "minLength": 1
    },
    "security_event_category": {
      "type": "string",
      "description": "High-level category for grouping security events.",
      "enum": [
        "auth",
        "authorization",
        "policy_violation",
        "instruction_misuse",
        "data_access",
        "rate_limit",
        "config",
        "infrastructure",
        "other"
      ]
    },
    "severity": {
      "type": "string",
      "description": "Severity of the event from the security perspective.",
      "enum": [
        "info",
        "low",
        "medium",
        "high",
        "critical"
      ]
    },
    "policy_profile_id": {
      "type": "string",
      "description": "Identifier of the applicable security policy profile."
    },
    "policy_ref": {
      "type": "object",
      "description": "Optional reference to the triggered policy.",
      "properties": {
        "policy_document_id": {
          "type": "string"
        },
        "rule_id": {
          "type": "string"
        },
        "policy_version": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "security_model_version": {
      "type": "string",
      "description": "Version of the security model."
    },
    "detection_source": {
      "type": "string",
      "enum": [
        "human_review",
        "rule_engine",
        "runtime_guard",
        "external_system",
        "other"
      ]
    },
    "detection_confidence": {
      "type": "number",
      "minimum": 0.0,
      "maximum": 1.0
    },
    "recommended_actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action_type": {
            "type": "string"
          },
          "reason": {
            "type": "string"
          },
          "priority": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          }
        },
        "required": [
          "action_type"
        ],
        "additionalProperties": true
      }
    },
    "actions_taken": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "action_type": {
            "type": "string"
          },
          "taken_at": {
            "type": "string",
            "format": "date-time"
          },
          "actor": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "completed",
              "failed",
              "skipped"
            ]
          },
          "details": {
            "type": "string"
          }
        },
        "required": [
          "action_type"
        ],
        "additionalProperties": true
      }
    }
  },
  "required": [
    "episode_id",
    "episode_type",
    "mova_version",
    "recorded_at",
    "executor",
    "result_status",
    "result_summary",
    "security_event_type",
    "security_event_category",
    "severity",
    "security_model_version"
  ],
  "anyOf": [
    {
      "required": [
        "input_envelopes"
      ]
    },
    {
      "required": [
        "input_data_refs"
      ]
    }
  ],
  "additionalProperties": false
}
