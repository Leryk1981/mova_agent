{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://mova.dev/schemas/env.mova_agent_request_v1.schema.json",
  "title": "env.mova_agent_request_v1",
  "description": "Carries goal + minimal context + refs to tool_pool and instruction_profile",
  "type": "object",
  "required": [
    "verb",
    "subject_ref",
    "object_ref",
    "payload"
  ],
  "properties": {
    "verb": {
      "type": "string",
      "enum": ["execute", "plan", "evaluate"]
    },
    "subject_ref": {
      "type": "string",
      "description": "Reference to the requesting entity"
    },
    "object_ref": {
      "type": "string",
      "description": "Reference to the target object"
    },
    "payload": {
      "type": "object",
      "required": ["goal"],
      "properties": {
        "goal": {
          "type": "string",
          "description": "The goal to achieve"
        },
        "context": {
          "type": "object",
          "description": "Minimal context for the request"
        },
        "tool_pool_ref": {
          "type": "string",
          "description": "Reference to the allowed tool pool"
        },
        "instruction_profile_ref": {
          "type": "string",
          "description": "Reference to the instruction profile"
        }
      }
    }
  }
}