{
  "name": "mova_agent",
  "version": "0.1.1",
  "description": "MOVA Agent - Deterministic interpreter runtime for MOVA envelopes",
  "main": "build/tools/mova-agent.js",
  "scripts": {
    "build": "tsc",
    "gen:types": "ts-node scripts/gen_types.ts",
    "lint": "eslint \"{src,scripts,test}/**/*.ts\"",
    "format": "prettier --write --ignore-path .prettierignore \"{src,scripts,test}/**/*.ts\" \"!scripts/legacy/**\" \"!src/types/generated/**\"",
    "format:check": "prettier --check --ignore-path .prettierignore \"{src,scripts,test}/**/*.ts\" \"!scripts/legacy/**\" \"!src/types/generated/**\"",
    "check:structure": "ts-node scripts/check_structure.ts",
    "check:docs": "ts-node scripts/check_docs.ts",
    "verify:compat": "node scripts/verify-compatibility.js",
    "build:sdk-cli": "node scripts/run_sdk_cli.js build",
    "test:integration": "node scripts/run_sdk_cli.js test:integration",
    "test": "npm run build && npm run gen:types && ts-node test/episodes/episode_writer_atomic.test.ts && ts-node test/drivers/registry.test.ts",
    "smoke:core-engine": "node tools/core_engine_probe_v0.mjs",
    "smoke:executors": "node tools/executors_probe_v0.mjs",
    "quality:pos": "ts-node scripts/legacy/quality_pos.ts",
    "quality:neg": "ts-node scripts/legacy/quality_neg.ts",
    "quality:ocp_delivery": "npm run build && node tools/quality_ocp_delivery_v0.mjs",
    "quality:ocp_delivery:neg": "npm run build && node tools/quality_ocp_delivery_v0_neg.mjs",
    "quality:external_call_webhook": "npm run build && node tools/quality_external_call_webhook_v0.mjs",
    "quality:external_call_webhook:neg": "npm run build && node tools/quality_external_call_webhook_v0_neg.mjs",
    "quality:ocp_delivery_v1": "npm run build && node tools/quality_ocp_delivery_v1.mjs",
    "quality:ocp_delivery_v1:neg": "npm run build && node tools/quality_ocp_delivery_v1_neg.mjs",
    "quality:ocp_idempotency_suppression": "npm run build && node tools/quality_ocp_idempotency_suppression_v0.mjs",
    "quality:ocp_idempotency_suppression:neg": "npm run build && node tools/quality_ocp_idempotency_suppression_v0_neg.mjs",
    "smoke:ocp_delivery:staging": "node tools/smoke_ocp_delivery_staging_v0.mjs",
    "ocp:doctor": "node tools/ocp_doctor_v0.mjs",
    "ocp:doctor:strict": "node tools/ocp_doctor_v0.mjs --strict",
    "proofkit:run": "node tools/proofkit_run_v0.mjs",
    "proofkit:all": "node tools/proofkit_run_v0.mjs --all",
    "dev": "nodemon --exec ts-node tools/mova-agent.ts",
    "start": "node build/tools/mova-agent.js",
    "prepublishOnly": "npm run build",
    "release:version": "npm version patch"
  },
  "keywords": [
    "mova",
    "agent",
    "interpreter",
    "deterministic",
    "envelope"
  ],
  "author": "",
  "license": "ISC",
  "files": [
    "build",
    "src",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "@types/ajv": "^0.0.5",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.19.28",
    "@typescript-eslint/eslint-plugin": "^8.53.0",
    "@typescript-eslint/parser": "^8.53.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "json-schema-to-typescript": "^13.1.1",
    "nodemon": "^3.0.0",
    "prettier": "^3.7.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@leryk1981/mova-core-engine": "^0.1.1",
    "@leryk1981/mova-executors": "^0.1.1",
    "@leryk1981/mova-spec": "^4.1.1",
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "commander": "^11.0.0",
    "fs-extra": "^11.1.1"
  },
  "overrides": {
    "picomatch": "4.0.3"
  }
}
